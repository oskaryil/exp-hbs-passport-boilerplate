<div class="container">
  <h1 class="text-center">Login</h1>
  <form id="login-form" method="post" action="/login">
    <div class="form-group">
      <label for="login-username">Username*</label>
      <input tabindex="1" type="text" class="form-control" id="login-username" name="username" placeholder="Username" required> 
    </div>
    <div class="form-group">
      <label for="login-password">Password*</label>
      <input tabindex="2" type="password" class="form-control" id="login-password" name="password" placeholder="Password" required>
    </div>
    <button tabindex="3" type="submit" class="btn btn-success">Login</button>
  </form>
</div>
